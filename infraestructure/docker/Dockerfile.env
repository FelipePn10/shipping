# ============================================
# üî• DESENVOLVIMENTO - Hot Reload com Maven
# ============================================
FROM maven:3.9.9-eclipse-temurin-21-alpine

# Instalar curl para health checks
RUN apk add --no-cache curl tzdata

# Configurar timezone Brasil
ENV TZ=America/Sao_Paulo
RUN cp /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone

WORKDIR /app

# Copiar pom.xml e baixar depend√™ncias primeiro (cache)
COPY pom.xml .
RUN mvn dependency:go-offline -B || true

# Copiar c√≥digo fonte
COPY src ./src

# Configura√ß√µes JVM otimizadas para dev
ENV MAVEN_OPTS="-Xmx1024m -XX:+UseG1GC"
ENV SPRING_PROFILES_ACTIVE=dev

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=90s --retries=3 \
  CMD curl -f http://localhost:8081/actuator/health || exit 1

EXPOSE 8081

# Rodar com Maven (permite hot reload)
CMD ["mvn", "spring-boot:run", "-Dspring-boot.run.jvmArguments='-Xms512m -Xmx1024m'"]